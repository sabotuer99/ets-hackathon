<h1>Inventory Map</h1>
<div style='width: 100%;'>
  <div id="map" style='width: 100%; height: 600px;'></div>
</div>
<script>
var markers = <%=raw @markers.to_json %>
var infowindow;

function initMap(){
    
  infowindow = new google.maps.InfoWindow;
    
  var map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: <%= @center['lat'] %>, lng: <%= @center['lng'] %>},
    zoom: 6,
    styles: [{
      featureType: 'poi',
      stylers: [{ visibility: 'off' }]  // Turn off points of interest.
    }, {
      featureType: 'transit.station',
      stylers: [{ visibility: 'off' }]  // Turn off bus stations, train stations, etc.
    }],
    disableDoubleClickZoom: true
  });
  Window.map = map;
  
  var marker, i;
  
  for (i = 0; i < markers.length; i++) {  
    marker = new google.maps.Marker({
         position: new google.maps.LatLng(markers[i].lat, markers[i].lng),
         picture: markers[i].picture,
         map: map
    });

    google.maps.event.addListener(marker, 'click', (function(marker, i) {
         return function() {
             infowindow.setContent(markers[i].infowindow);
             infowindow.open(map, marker);
         }
    })(marker, i));
  }
}
</script>

<script async defer src="//maps.google.com/maps/api/js?key=AIzaSyCewGn8rk7jFOj6DDiB1LjI7uYE3vlCTiI&libraries=geometry&callback=initMap"></script> 
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->