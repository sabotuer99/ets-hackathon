<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table id="items_table" class="display compact" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Description</th>
      <th>Agency</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th style="display:none;" class="sorting_disabled"></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </tfoot>

  <tbody>
    <% even = true; %>
    <% @items.each do |item| %>
      <tr role="row" class="<%= if even then "even" end; even = !even %>">
        <td><%= item.description %></td>
        <td><%= item.agency_id %></td>
        <td><%= item.street %></td>
        <td><%= item.city %></td>
        <td><%= State.find(item.state_id).state_abbr rescue "Unknown" %></td>
        <td><%= item.zip %></td>
        <td>
         <%= link_to 'Details', item %>
         <%= link_to 'Edit', edit_item_path(item) %>
         <%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

